all: myapp

#使用哪个编译器进行编译
CC = gcc

#包含的文件的位置
INCLUDE = .

#测试环境下的参数
CFLAGS = -g -Wall -ansi

myapp: main.o 2.o 3.o
	${CC} -o myapp main.o 2.o 3.o
main.o:main.c a.h
	${CC} -I${INCLUDE} ${CFLAGS} -c main.c
2.o:2.c a.h b.h
	${CC} -I${INCLUDE} ${CFLAGS} -c 2.c
3.o:3.c b.h c.h
	${CC} -I${INCLUDE} ${CFLAGS} -c 3.c

#makefile中的注释以#开头
#定义宏的makefile文件例子
